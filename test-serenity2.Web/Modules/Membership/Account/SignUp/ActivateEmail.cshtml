@model test_serenity2.Membership.ActivateEmailModel

<html>
<head>
    <title>Activate your test_serenity2 account</title>
</head>
<body>
    <p>@Model.DisplayName,</p>

    <p>We received a request to create a new account on test_serenity2 with your email address.</p>

    <p>Click the link below to activate your account:</p>

    <p><a href="@Model.ActivateLink">@Model.ActivateLink</a></p>

    <p>If it wasn't you who requested this, you can ignore this email.</p>

    Thanks,
    The "test_serenity2" Team
</body>
</html>